  "description": "",
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "async-retry": "^1.3.3",
    "dotenv": "^16.5.0",
    "next": "^15.3.2",
    "next-connect": "^1.0.0",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.19",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.4",
    "commitizen": "^4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.5.3",
