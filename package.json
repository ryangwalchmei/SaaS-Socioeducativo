{
  "name": "saas-socioeducativo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "devonly": "next dev",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next --kill-others -k --success command-jest \"next dev\" \"jest --runInBand --verbose\" ",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-database.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryangwalchmei/SaaS-Socioeducativo.git"
  },
  "author": "gwalchmei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryangwalchmei/SaaS-Socioeducativo/issues"
  },
  "homepage": "https://github.com/ryangwalchmei/SaaS-Socioeducativo#readme",
  "description": "",
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "9.8.0",
    "async-retry": "^1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "^16.5.0",
    "dotenv-expand": "11.0.6",
    "next": "^15.3.2",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "7.9.1",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.0",
    "set-cookie-parser": "2.7.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.19",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.4",
    "commitizen": "^4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.27.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
